Algoritmo "Aniversario unicornio"
Var
     ano_atual, ano_nasc, idade: inteiro
Inicio
      Escreva ("Em que ano estamos? ")
      Leia (ano_atual)
      Escreva ("Em que ano nasceu o unicornio? ")
      Leia (ano_nasc)
idade <- ano_atual-ano_nasc
      Escreval ("a idade do unicornio é: ", idade)
 Se (idade >= 18) entao
    EscrevaL ("Já é maior de idade")
 FimSe
Fimalgoritmo